<!-- res/layout/widget_counter.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">
        <TextView
            android:id="@+id/widget_counter_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Счётчик"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#5D4A66"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1" />
        <ImageButton
            android:id="@+id/widget_btn_add_counter"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/widget_button_bg_round"
            android:src="@drawable/ic_add_white_24dp"
            android:scaleType="centerInside"
            android:contentDescription="Добавить счётчик" />
    </LinearLayout>
    <!-- Петли -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:padding="6dp"
        android:layout_marginBottom="6dp"
        android:radius="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🧶 Петли"
            android:textSize="12sp"
            android:textColor="#5D4A66"
            android:gravity="center_vertical" />
        <!-- Кнопка "-" -->
        <ImageButton
            android:id="@+id/widget_btn_stitch_dec"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/widget_button_bg_round"
            android:src="@drawable/ic_minus_white_24dp"
            android:scaleType="centerInside"
            android:contentDescription="Уменьшить петли" />
        <TextView
            android:id="@+id/widget_stitch_value"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#5D4A66"
            android:gravity="center" />
        <!-- Кнопка "+" -->
        <ImageButton
            android:id="@+id/widget_btn_stitch_inc"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/widget_button_bg_round"
            android:src="@drawable/ic_plus_white_24dp"
            android:scaleType="centerInside"
            android:contentDescription="Увеличить петли" />
    </LinearLayout>
    <!-- Ряды -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:padding="6dp"
        android:radius="8dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📏 Ряды"
            android:textSize="12sp"
            android:textColor="#5D4A66"
            android:gravity="center_vertical" />
        <!-- Кнопка "-" -->
        <ImageButton
            android:id="@+id/widget_btn_row_dec"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/widget_button_bg_round"
            android:src="@drawable/ic_minus_white_24dp"
            android:scaleType="centerInside"
            android:contentDescription="Уменьшить ряды" />
        <TextView
            android:id="@+id/widget_row_value"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#5D4A66"
            android:gravity="center" />
        <!-- Кнопка "+" -->
        <ImageButton
            android:id="@+id/widget_btn_row_inc"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/widget_button_bg_round"
            android:src="@drawable/ic_plus_white_24dp"
            android:scaleType="centerInside"
            android:contentDescription="Увеличить ряды" />
    </LinearLayout>
</LinearLayout>