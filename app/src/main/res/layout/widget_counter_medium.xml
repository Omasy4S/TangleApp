<!-- Увеличено всё на ~20% -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/widget_counter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Счётчик"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#5D4A66"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1" />

        <ImageButton
            android:id="@+id/widget_btn_add_counter"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/widget_button_bg_round"
            android:src="@drawable/ic_add_white_24dp"
            android:scaleType="centerInside"
            android:contentDescription="Добавить счётчик" />

    </LinearLayout>

    <!-- Петли -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:radius="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🧶 Петли"
            android:textSize="14sp"
            android:textColor="#5D4A66" />

        <Button
            android:id="@+id/widget_btn_stitch_dec"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:text="−"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/widget_button_bg"
            android:layout_marginStart="6dp" />

        <TextView
            android:id="@+id/widget_stitch_value"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#5D4A66"
            android:gravity="center" />

        <Button
            android:id="@+id/widget_btn_stitch_inc"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:text="+"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/widget_button_bg"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp" />
    </LinearLayout>

    <!-- Ряды -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:radius="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📏 Ряды"
            android:textSize="14sp"
            android:textColor="#5D4A66" />

        <Button
            android:id="@+id/widget_btn_row_dec"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:text="−"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/widget_button_bg"
            android:layout_marginStart="6dp" />

        <TextView
            android:id="@+id/widget_row_value"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#5D4A66"
            android:gravity="center" />

        <Button
            android:id="@+id/widget_btn_row_inc"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:text="+"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/widget_button_bg"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp" />
    </LinearLayout>
</LinearLayout>